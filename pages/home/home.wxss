/* pages/home/home.wxss */
.list-wrap{
  width: 750rpx;
  padding:0 20rpx;
  box-sizing: border-box;
}
.item-wrap{
  width: 710rpx;
  height: 360rpx;
  margin-top: 20rpx;
}

.info-wrap{
  width: 710rpx;
  height: 300rpx;
  position: relative
}
.info-img{
  width: 710rpx;
  height: 300rpx;
}

.info-text-wrap{
  position: absolute;
  bottom: 20rpx;
  left:20rpx;
  height: 40rpx;
  font-size: 24rpx;
  
}
.info-text-status{
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  padding:0 10rpx;
  color:#ffffff;
  background:rgba(0,0,0,0.4);
}
.info-text-time{
  margin-left: 12rpx;
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  padding:0 10rpx;
  color:#ffffff;
  background:rgba(0,0,0,0.4);
}
.anchor-wrap{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding:0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}
.anchor-dot{
  vertical-align: middle;
  display: inline-block;
  width:36rpx;
  height: 36rpx;
  border-radius: 50%;
  background:#0091f7;
}
.anchor-name{
  vertical-align: middle;
  margin-left:10rpx;
}